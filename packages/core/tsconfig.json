{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "~*": [
        "./src/*"
      ]
    },
    "rootDir": "./src",
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
